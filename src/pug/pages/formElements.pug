
extends ../layout/templateForUi

block variables
  - var title = "FormElements";

block head


block main
  main.page-main.page-main--ui
    h1.visually-hidden Элементы форм для сайта
    .up-part
      .up-part__left
        .content-wrapper--20
          label.label.label--with-status.up-part__label(for='text-field-default') Text field 
          input#text-field-default.input.input--long(type='text', name='email', placeholder='Email')
        .content-wrapper--20
          label.label.label--with-status.up-part__label.up-part__label--hover-focus-status(for='text-field-hover-focus') Text field 
