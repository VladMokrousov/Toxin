        .content-wrapper--40
          span.label.up-part__label--more-margin like button
          .content-wrapper--flex
            button.like-button.like-button--first 2
            button.like-button.like-button--clicked 12
          
        .up-part__content-wrapper
          span.label.up-part__label--more-margin rate button
          .content-wrapper--flex
            .rate-buttons.rate-buttons--first
              form(action="")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--5(type="radio" id="star-5" name="star")
                label.rate-buttons__rate.rate-buttons__rate--5(for="star-5")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--4(type="radio" id="star-4" name="star" checked)
                label.rate-buttons__rate.rate-buttons__rate--4(for="star-4")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--3(type="radio" id="star-3" name="star")
                label.rate-buttons__rate.rate-buttons__rate--3(for="star-3")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--2(type="radio" id="star-2" name="star")
                label.rate-buttons__rate.rate-buttons__rate--2(for="star-2")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--1(type="radio" id="star-1" name="star")
                label.rate-buttons__rate.rate-buttons__rate--1(for="star-1")
            .rate-buttons
              form(action="")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--5(type="radio" id="another-star-5" name="another-star" checked)
                label.rate-buttons__rate.rate-buttons__rate--5(for="another-star-5")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--4(type="radio" id="another-star-4" name="another-star")
                label.rate-buttons__rate.rate-buttons__rate--4(for="another-star-4")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--3(type="radio" id="another-star-3" name="another-star")
                label.rate-buttons__rate.rate-buttons__rate--3(for="another-star-3")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--2(type="radio" id="another-star-2" name="another-star")
                label.rate-buttons__rate.rate-buttons__rate--2(for="another-star-2")
                input.visually-hidden.rate-buttons__input.rate-buttons__input--1(type="radio" id="another-star-1" name="another-star")
                label.rate-buttons__rate.rate-buttons__rate--1(for="another-star-1")
           
      .up-part__right
        .up-part__content-wrapper--range-slider
          span.label.label--range-slider range-slider
          .slider-with-range
            input.slider-with-range__value(type="text" name="slider-value" placeholder="5 000₽ - 10 000₽" readonly)
            .slider-with-range__line.slider-line
              .slider-with-range__pin.slider-with-range__pin--min-value(tabindex="0") Кнопка изменения минимальной суммы    
              .slider-with-range__pin.slider-with-range__pin--max-value(tabindex="0") Кнопка изменения максимальной суммы
              .slider-with-range__range Диапазон сумм 
        .content-wrapper--40
          span.label.up-part__label--more-margin buttons
          .up-part__buttons-wrapper
              button.btn.btn--standart.up-part__button click me
              button.btn.btn--with-opacity.up-part__button click me
          .up-part__buttons-wrapper
              button.btn.btn--invert.up-part__button click me
              button.btn.btn--invert.btn--invert-opacity.up-part__button click me
          .up-part__buttons-wrapper
              button.btn--string.up-part__btn--string click me
              button.btn--string.btn--string-opacity click me
          .content-wrapper--arrow-content
            a.arrow--right.arrow--for-purchase(href="#")
            a.btn.btn--with-arrow(href="#") перейти к оплате
          
           
        .up-part__content-wrapper
          span.label.up-part__label--more-margin pagination
          .pagination
            ul.pagination__list
              li.pagination__item
                a.pagination__link.pagination__link--active(href='#') 1
              li.pagination__item      
                a.pagination__link(href='#') 2
              li.pagination__item           
                a.pagination__link(href='#') 3
              li.pagination__item         
                a.pagination__link(href='#') ...
              li.pagination__item         
                a.pagination__link(href='#') 15
              li.pagination__item.pagination__item--next
                a.arrow--right.arrow--for-purchase.pagination__arrow(href='#')         
                a.pagination__link--with-arrow(href='#')
            span.pagination__description 1 – 12 из 100+ вариантов аренды   
    .middle-part    
      .middle-part__left
        .content-wrapper--20
          label.label.label--with-status.label--with-expanded(for='dropdown-default-second') Dropdown
          input#dropdown-default-second.input.input--medium.input--bright-placeholder.input--expanded.input--expanded-close(type='text', name='dropdown-default', placeholder='2 спальни, 2 кровати...' readonly)
        .content-wrapper--with-shadow
          label.label.label--with-status.label--with-status-expanded.label--with-expanded(for='dropdown-expanded') Dropdown
          input#dropdown-expanded.input.input--medium.input--bright-placeholder.input--hover-focus.input--expanded.input--expanded-open(type='text', name='dropdown-expanded', placeholder='2 спальни, 2 кровати...' readonly)
          .content-wrapper--expanded-content
          .expanded-part
            ul.expanded-part__name-list
              li.expanded-part__name-item спальни
              li.expanded-part__name-item кровати
              li.expanded-part__name-item ванные комнаты
            ul.expanded-part__number-list
              li.expanded-part__number-item
                button.expanded-part__control-btn.expanded-part__control-btn--decrease
                span.expanded-part__number-text 2
                button.expanded-part__control-btn.expanded-part__control-btn--increase
              li.expanded-part__number-item
                button.expanded-part__control-btn.expanded-part__control-btn--decrease
                span.expanded-part__number-text 2
                button.expanded-part__control-btn.expanded-part__control-btn--increase
              li.expanded-part__number-item 
                button.expanded-part__control-btn.expanded-part__control-btn--decrease.expanded-part__control-btn--disabled
                span.expanded-part__number-text 0
                button.expanded-part__control-btn.expanded-part__control-btn--increase
        
        .middle-part__content-wrapper
          span.label.label--expandable-checkbox-list.label--expandable-checkbox-list-close.middle-part__label--more-margin expandable checkbox list
          ul.checkbox-list.checkbox-list--expandable.checkbox-list--close
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='breakfast-f' id='breakfast-f')
              label.checkbox-list__label(for='breakfast-f') Завтрак
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='desk-f' id='desk-f' checked)
              label.checkbox-list__label(for='desk-f') Письменный стол
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='feeding-chair-f' id='feeding-chair-f' checked)
              label.checkbox-list__label(for='feeding-chair-f') Стул для кормления
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='cot-f' id='cot-f' checked)
              label.checkbox-list__label(for='cot-f') Кроватка
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='tv-f' id='tv-f')
              label.checkbox-list__label(for='tv-f') Телевизор
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='shampoo-f' id='shampoo-f')
              label.checkbox-list__label(for='shampoo-f') Шампунь
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='tv-second-f' id='tv-second-f')
              label.checkbox-list__label(for='tv-second-f') Телевизор
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='shampoo-second-f' id='shampoo-second-f')
              label.checkbox-list__label(for='shampoo-second-f') Шампунь
        .middle-part__content-wrapper
          span.label.label--expandable-checkbox-list.label--expandable-checkbox-list-open.middle-part__label--more-margin expandable checkbox list
          ul.checkbox-list.checkbox-list--expandable.checkbox-list--open
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='breakfast' id='breakfast')
              label.checkbox-list__label(for='breakfast') Завтрак
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='desk' id='desk' checked)
              label.checkbox-list__label(for='desk') Письменный стол
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='feeding-chair' id='feeding-chair' checked)
              label.checkbox-list__label(for='feeding-chair') Стул для кормления
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='cot' id='cot' checked)
              label.checkbox-list__label(for='cot') Кроватка
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='tv' id='tv')
              label.checkbox-list__label(for='tv') Телевизор
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='shampoo' id='shampoo')
              label.checkbox-list__label(for='shampoo') Шампунь
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='tv-second' id='tv-second')
              label.checkbox-list__label(for='tv-second') Телевизор
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='shampoo-second' id='shampoo-second')
              label.checkbox-list__label(for='shampoo-second') Шампунь
           
      
      .middle-part__center
        .content-wrapper--with-shadow
          label.label.label--with-expanded(for='dropdown-expanded-guests') Dropdown
          input#dropdown-expanded-guests.input.input--long.input--bright-placeholder.input--hover-focus.input--expanded.input--expanded-open(type='text', name='dropdown-expanded-guests', placeholder='Сколько гостей' readonly)
          .expanded-part.expanded-part--long
            .content-wrapper--flex
              ul.expanded-part__name-list
                li.expanded-part__name-item взрослые
                li.expanded-part__name-item дети
                li.expanded-part__name-item младенцы
              ul.expanded-part__number-list
                li.expanded-part__number-item
                  button.expanded-part__control-btn.expanded-part__control-btn--decrease.expanded-part__control-btn--disabled
                  span.expanded-part__number-text 0
                  button.expanded-part__control-btn.expanded-part__control-btn--increase
                li.expanded-part__number-item
                  button.expanded-part__control-btn.expanded-part__control-btn--decrease.expanded-part__control-btn--disabled
                  span.expanded-part__number-text 0
                  button.expanded-part__control-btn.expanded-part__control-btn--increase
                li.expanded-part__number-item 
                  button.expanded-part__control-btn.expanded-part__control-btn--decrease.expanded-part__control-btn--disabled
                  span.expanded-part__number-text 0
                  button.expanded-part__control-btn.expanded-part__control-btn--increase
            button.btn--string.expanded-part__apply-btn применить
        .middle-part__wrapper--rich-checkbox
          span.label.middle-part__label--more-margin rich checkbox buttons
          ul.checkbox-list
            li.checkbox-list__item
              input.visually-hidden.checkbox-list__checkbox(type='checkbox' name='wide-corridor' id='wide-corridor')
              label.checkbox-list__label.checkbox-list__label--rich(for='wide-corridor') Широкий коридор 
