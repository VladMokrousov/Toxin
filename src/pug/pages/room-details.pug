extends ../layout/templateForSite

block variables
  - var title = "roomDetails";

block head
  


block main
  main.page-main.page-main--with-line
    h1.visually-hidden Карточка номера
    .massonry
      h2.visually-hidden Фотографии номера
      img.massonry__photo--1(src="assets/img/room-details-1.jpg" width="981" height="485" alt="Первое фото номера")
      img.massonry__photo--2(src="assets/img/room-details-2.jpg" width="459" height="243" alt="Второе фото номера")
      img.massonry__photo--3(src="assets/img/room-details-3.jpg" width="459" height="242" alt="Третье фото номера")
    section.container.greed--room-details
      h2.visually-hidden Информация о номере
      .room-info
        span.h3-title Сведения о номере
        ul.features-list
          li.features-list__item.features-list__item--smile
            span.features-list__text Комфорт
            span.features-list__text.features-list__description Шумопоглащающие стены
          li.features-list__item.features-list__item--building
            span.features-list__text Удобство
            span.features-list__text.features-list__description Окно в каждой из спален
          li.features-list__item--no-line.features-list__item--flame
            span.features-list__text Уют
            span.features-list__text.features-list__description Номер оснащён камином
      .room-impressions
        span.h3-title Впечатления от номера
        #chart
      .room-review
        span.h3-title.room-review__title Отзывы посетителей номера
        .feedback.content-wrapper--20
          .feedback__up
            img(src="assets/img/avatar.jpg" width="48" height="48" alt="Мурад Сарафанов")
            .wrapper
              span.feedback__commentator Мурад Сарафанов
              span.feedback__date 5 дней назад
          .feedback__down
            button.like-button.like-button--clicked.feedback__like-button 12
            p.feedback__text
              | Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. 
              br
              | И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.   
        .feedback
          .feedback__up
            img(src="assets/img/patricia.jpg" width="48" height="48" alt="Патрисия Стёклышкова")
            .wrapper
              span.feedback__commentator Патрисия Стёклышкова
              span.feedback__date Неделю назад
          .feedback__down
            button.like-button.feedback__like-button 2
            p.feedback__text
              | Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, 
              br
              | каждый день новое блюдо и десерт как комплимент
      .room-rules
        span.h3-title.room-rules__title Правила
        ul.bullet-list
            li.bullet-list__item
              span.bullet-list__text Нельзя с питомцами
            li.bullet-list__item
              span.bullet-list__text Без вечеринок и мероприятий
            li.bullet-list__item
              span.bullet-list__text 
                | Время прибытия — после 13:00,
                br
                | а выезд до 12:00
      .room-cancel
        span.h3-title Отмена
        p.regular-text.room-cancel__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      section.card.card--booking-room.room-card
        h2.visually-hidden Бронирование номера
        form(name="to-book")
          .title-wrapper.content-wrapper--flex-with-justify.content-wrapper--20
            .just-wrapper
              span.card__title--number № 
                b.card__title--number.card__title--number-strong 888 
              span.card__title--room-type Люкс
            span.card__title--price-per-day
              b.card__title--price-per-day-strong 9 990₽ 
              | в сутки 
          .content-wrapper--flex-with-justify.content-wrapper--20
            .center__wrapper--date-dropdown
              label.label.label--with-dropdown(for='arrival--booking') Прибытие
              input#arrival--booking.input.input--short.input--bright-placeholder.input--expanded(type='text', name='arrival--booking', placeholder='19.08.2019' readonly)
            .center__wrapper--date-dropdown
              label.label.label--with-dropdown(for='exit--booking') Выезд
              input#exit--booking.input.input--short.input--bright-placeholder.input--expanded(type='text', name='exit--booking', placeholder='23.08.2019' readonly)
          .center__wrapper--how-much-guests.content-wrapper--20
            label.label.label--with-dropdown(for='how-much-guests--center') Гости
            input#how-much-guests--center.input.input--long.input--bright-placeholder.input--expanded(type='text', name='how-much-guests--center', placeholder='3 гостя' readonly)
          .content-wrapper--flex-with-justify.content-wrapper--10
            span.regular-text.card__text--with-limit 9 990₽ x 4 суток
            span.regular-text 39 960₽
          .content-wrapper--flex-with-justify.content-wrapper--10
            span.regular-text.card__text--with-limit.card__text--with-info-icon Сбор за услуги: скидка 2179₽
            span.regular-text 0₽
          .content-wrapper--flex-with-justify.content-wrapper--30
            span.regular-text.card__text--with-limit.card__text--with-info-icon Сбор за дополнительные услуги
            span.regular-text 300₽
          .content-wrapper--flex-with-justify.content-wrapper--20
            span.card__result-price.card__result-price--with-line Итого
            span.card__result-price 38 081₽
          .content-wrapper--arrow-content
            a.arrow--right.arrow--for-purchase(href="#")
            a.btn.btn--with-arrow(href="#") Забронировать     
   
    
block script
  script(src='assets/js/forRoomDetails.js')